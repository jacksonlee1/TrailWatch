@using Microsoft.AspNetCore.Identity
@using Data.Entities
@inject SignInManager<UserEntity> SignInManager


<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{

    <li class="nav-item">
        <form id="logoutForm" class="form-inline"  asp-action="Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-secondary">Logout</button>
        </form>
    </li>

}
else
{
    <li class="nav-item">
        <a class="btn btn-secondary" id="register"  asp-controller = "Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-secondary" id="login"  asp-controller = "Account" asp-action="Login">Login</a>
    </li>
}
</ul>


@model UserLogin
@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>

<div>
    @* <h1 class="display-4 mb-3">@ViewData["Title"]</h1> *@
<h2 class="display-4 mb-3">Log In</h2>

<form asp-action="Login" method="post">
@* .form-floating.mb-3*4>input.form-control+label+span.text-danger *@
<div class="form-floating mb-3">
    <input type="text" class="form-control" asp-for="Username" placeholder="Username">
    <label asp-for="Username"></label>
    <span asp-validation-for="Username" class="text-danger"></span>
    </div>
<div class="form-floating mb-3">
    <input type="password" class="form-control" asp-for="Password" placeholder="Password">
    <label asp-for="Password"></label>
    <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="d-flex flex-column gap-2">
        <button type="submit" class="btn btn-primary">Login</button>
        <a asp-action="Register" asp-controller="Account" class="text-center py-2">
            Register as a new user?
        </a>
    </div>
</form>
</div>